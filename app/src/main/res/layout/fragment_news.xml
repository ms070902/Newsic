<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsFragment">

    <!-- TODO: Update blank fragment layout -->
    <HorizontalScrollView
        android:layout_margin="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBusiness"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:text="business"
                android:textSize="12sp" />

            <Button
                android:id="@+id/btnEntertainment"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entertainment"/>
            <Button
                android:id="@+id/btnGeneral"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="general"/>
            <Button
                android:id="@+id/btnHealth"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="health"/>
            <Button
                android:id="@+id/btnScience"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="science"/>
            <Button
                android:id="@+id/btnSports"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sports"/>
            <Button
                android:id="@+id/btnTechnology"
                android:padding="6dp"
                android:layout_margin="6dp"
                android:textSize="12sp"
                android:shadowRadius="@integer/material_motion_duration_long_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="technology"/>
        </LinearLayout>

    </HorizontalScrollView>
    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        app:cardElevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchNews"
            app:defaultQueryHint="Search News"
            app:iconifiedByDefault="false"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

        </androidx.appcompat.widget.SearchView>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recyclerViewNews"
        android:layout_margin="8dp">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>